<%= render "shared/header" %>
<%= render "shared/menu" %>

<div class="row main-content">
  <div class="large-6 large-offset-3 small-12 columns">
    <% if flash[:notice] %>
      <div data-alert class="alert-box success" id="notice">
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:error] %>
      <div data-alert class="alert-box alert" id="notice">
        <%= flash[:error] %>
      </div>
    <% end %>

    <%= yield %>
  </div>
</div>

<%= render "shared/footer" %>
