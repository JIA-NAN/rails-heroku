<h1>Server Information</h1>

<h2>Server</h2>

<p><b>ENV</b>: <%= ENV['RAILS_ENV'] %></p>
<p><b>Time</b>: <%= Time.zone.now %>, <b>PTime</b>: <%= Ptime.now %></p>

<h2>Delayed_Job</h2>

<h3>Unprocessed Records</h3>
<table>
  <tr>
    <th>Created Time</th>
    <th>Id</th>
    <th></th>
  </tr>
<% @unprocessed_records.each do |record| %>
  <tr>
    <td><%= localtime record.created_at %></td>
    <td><%= record.id %></td>
    <td><%= link_to 'Show', record_path(record) %></td>
  </tr>
<% end %>
</table>

<h2>Whenever Tasks</h2>

<table>
  <tr>
    <th>Task</th>
    <th>Meta</th>
    <th>Last Run Time</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.task %></td>
    <td><%= task.meta %></td>
    <td><%= task.updated_at %></td>
  </tr>
<% end %>
</table>
