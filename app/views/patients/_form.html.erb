<%= simple_form_for(@patient, html: { class: "custom" }) do |f| %>
  <% if @patient.errors.any? %>
    <div data-alert class="alert alert-box">
      <%= pluralize(@patient.errors.count, "error") %> prohibited your edits from being saved
    </div>
  <% end %>

  <%= f.input :mist_id, disabled: true, required: true, label: "Login ID" %>

  <div class="row">
    <%= f.input :firstname, wrapper_html: { class: "large-6 columns" } %>
    <%= f.input :lastname, wrapper_html: { class: "large-6 columns" } %>
  </div>

  <%-# f.input :phone, placeholder: '+6512345678' %>
  <%-# f.input :email, required: true %>

  <%= f.association :notification_services, as: :check_boxes %>

  <div><%= f.submit "Update", :class => "button" %></div>
<% end %>
