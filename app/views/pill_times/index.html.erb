<h1><%= t(:listing_pill_times)%></h1>

<table>
  <tr>
    <th>Monday</th>
    <th>Tuesday</th>
    <th>Wednesday</th>
    <th>Thursday</th>
    <th>Friday</th>
    <th>Saturday</th>
    <th>Sunday</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pill_times.each do |pill_time| %>
  <tr>
    <td><%= pill_time.monday %></td>
    <td><%= pill_time.tuesday %></td>
    <td><%= pill_time.wednesday %></td>
    <td><%= pill_time.thursday %></td>
    <td><%= pill_time.friday %></td>
    <td><%= pill_time.saturday %></td>
    <td><%= pill_time.sunday %></td>
    <td><%= link_to t(:show), pill_time %></td>
    <td><%= link_to t(:edit), edit_pill_time_path(pill_time) %></td>
    <td><%= link_to t(:destroy), pill_time, method: :delete, data: { confirm: t(:are_you_sure) } %></td>
  </tr>
<% end %>
</table>

